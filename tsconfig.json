{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "outDir": "dist", // TS文件编译后会放入到此文件夹内
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@api/*": [
                "src/api/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}